<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Provinsi</title>
</head>

<body class="bg-light">
    <div class="container bg-white mt-5 border rounded p-4">
        <div class="d-flex justify-content-between">
            <div class=" col-md-7">
                <h1>Provinsi dan Kabupaten</h1>
            </div>
            <div class=" col-md-4 d-flex justify-content-around p-2">
                <a href="/add-provinsi" class="btn btn-info">Tambah provinsi</a>
                <a href="/add-kabupaten" class="btn btn-info">Tambah kabupaten</a>
            </div>
        </div>

        <div class="mt-5">
            <div class="dropdown">
                <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Tampilkan
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" onclick="showAll()">Semua</a></li>
                    <li><a class="dropdown-item" href="#" onclick="nyala(1)">Provinsi</a></li>
                    <li><a class="dropdown-item" href="#" onclick="nyala(2)">Kabupaten</a></li>
                </ul>
            </div>
        </div>

        <div class="mt-5 mb-5 d-flex justify-content-around flex-wrap">
            {{#each dataProv}}
            <div id="provinsi" style="display: none;" class="card p-3 text-center bg-light m-3">
                <img src="assets/img/pancasila.png" alt="gambar-provinsi"
                    style="width: 240px; height: 240px; object-fit: contain;">
                <a href="/prov-details/{{this.prov_id}}" class="mt-3" style="text-decoration: none; color: black;">
                    <h4>Provinsi<br>
                    {{this.nama}}</h4>
                </a>
                <p>{{this.diresmikan}}</p>
                <div class="d-flex flex-column">
                    <a class="btn btn-info" href="/prov-details/{{this.prov_id}}">Detail</a>
                    <!--DROPDOWN-->
                    <div class="mt-1">
                        <div class="dropdown">
                            <button class="btn btn-info col-12" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Edit</button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/update-provinsi/{{this.prov_id}}">Update</a></li>
                                <li>
                                    <form class="mt-1 col-12 dropdown-item" action="/delete-provinsi/{{this.prov_id}}"
                                        method="POST" style="height:min-content; padding: 0; margin: 0;">
                                        <button class="btn" type="submit">Hapus</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
            {{/each}}

            {{#each dataKab}}
            <div id="kabupaten" style="display: none;" class="card p-3 text-center bg-light m-3">
                <img src="assets/img/Kabupaten_Cianjur.svg.png" alt="gambar-kabupaten"
                    style="width: 240px; height: 240px; object-fit: contain;">

                <a href="/kab-details/{{this.kab_id}}" class="mt-3" style="text-decoration: none; color: black;">
                    <h4>Kabupaten<br>
                    {{this.nama}}</h4>
                </a>
                <p>{{this.diresmikan}}</p>
                <div class="d-flex flex-column">
                    <a class="btn btn-info" href="/kab-details/{{this.kab_id}}">Detail</a>
                    <!--DROPDOWN-->
                    <div class="mt-1">
                        <div class="dropdown">
                            <button class="btn btn-info col-12" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Edit</button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/update-kab/{{this.kab_id}}">Update</a></li>
                                <li>
                                    <form class="mt-1 col-12 dropdown-item" action="/delete-kab/{{this.kab_id}}"
                                        method="POST" style="height:min-content; padding: 0; margin: 0;">
                                        <button class="btn" type="submit">Hapus</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
            {{/each}}

            <!--DUMMY++++++++++++++++++-->
            <div id="provinsi" style="display: none;" class="card p-3 text-center bg-light m-3">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/62/Coat_of_arms_of_West_Sumatra.svg/800px-Coat_of_arms_of_West_Sumatra.svg.png"
                    alt="gambar-provinsi" style="width: 240px; height: 240px; object-fit: contain;">
                <a href="#" class="mt-3" style="text-decoration: none; color: black">
                    <h4>Provinsi<br>
                    Sumatera Barat</h4>
                </a>
                <p>16 Maret 1950</p>
                <div class="d-flex flex-column">
                    <a class="btn btn-info" href="#">Detail</a>
                    <!--DROPDOWN-->
                    <div class="mt-1">
                        <div class="dropdown">
                            <button class="btn btn-info col-12" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Edit</button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Update</a></li>
                                <li>
                                    <form class="mt-1 col-12 dropdown-item" action="#" method="POST"
                                        style="height:min-content; padding: 0; margin: 0;">
                                        <button class="btn" type="submit">Hapus</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>

    <script src="assets/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>